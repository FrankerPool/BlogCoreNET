@{
	ViewData["Title"] = "Articles List";
}
<div class="container mt-4">
	<div class="row">
		<div class="col-8">
			<h2 class="text-primary">List Articles</h2>
		</div>

		<div class="col-4 text-right">
			<a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Create New Article</a>
		</div>
	</div>
	<br />
	<br />
	<table id="TableArticles" class="table table-striped table-bordered" style="width: 100%">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Category</th>
				<th>Date Creation</th>
				<th>Acctions</th>
			</tr>
		</thead>
	</table>
</div>
@section Scripts {
	<script src="/js/articles.js"></script>
}